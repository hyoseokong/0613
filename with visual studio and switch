#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main() {
	int menu;
	printf("Choose menu: \n");
	printf("1. Coke \n");
	printf("2. Orange \n");
	printf("3. Mint \n");

	scanf("%d", &menu);

	switch(menu) {
case 1:
printf("Coke is $2\n");
break;
case 2:
printf("Orange is $3\n");
break;
case 3:
printf("Mint is not available now. \n");
break;
default:
printf("Invalid menu selection.\n");
break;
}

	return 0;
}
