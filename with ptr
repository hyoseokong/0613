#include <stdio.h>

#define STUDENTS 5

int main() {
int scores[STUDENTS] = {88, 92, 76, 81, 95};
int sum = 0, max = scores[0], min = scores[0];
int *ptr = scores;

for (int i = 0; i < STUDENTS; i ++) {
sum += *(ptr + i);
if (*(ptr + i) > max) max = *(ptr + i);
if (*(ptr + i) < min) max = *(ptr + i);
}

printf("AVERAGE: %.2f\n", (float)sum / STUDENTS);
printf("MAX: %d\n", max);
printf("MIN: %d\n", min);

	return 0;
}
